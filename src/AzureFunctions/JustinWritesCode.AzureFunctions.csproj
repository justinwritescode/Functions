    <ItemGroup>
        <PackageReference Include="JustinWritesCode.Enumerations.CodeGeneration" IncludeAssets="Analyzers" PrivateAssets="All" />
        <PackageReference Include="Microsoft.AspNetCore.Mvc" />
        <PackageReference Include="Microsoft.Azure.Functions.Extensions" />
        <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.Http" PrivateAssets="All" />
        <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.OpenApi" PrivateAssets="All" />
        <PackageReference Include="Microsoft.EntityFrameworkCore" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
        <PackageReference Include="Microsoft.Extensions.Logging" />
        <PackageReference Include="MSBuild.Usings" />
        <PackageReference Include="ThisAssembly" />
        <PackageReference Include="ThisAssembly.Project" />
    </ItemGroup>
</Project>
