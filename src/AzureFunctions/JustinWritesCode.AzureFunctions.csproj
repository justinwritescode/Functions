    <EnableGlobalCodeGenerators>true</EnableGlobalCodeGenerators>
    <EnableThisAssembly>true</EnableThisAssembly>
    <EnableFluentBuilder>false</EnableFluentBuilder>
    <OutputPath>lib/</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <Description>Extensions and base classes for building Azure functions</Description>
